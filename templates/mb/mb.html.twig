{% block bodyextra %}
    <div class="mt-5 m-4">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }} alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message|raw }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endfor %}
    </div>
    <div class="row mx-1 py-1">
    <div class="col-12 col-md-9">
        {#<div class="block font-weight-bold">#}
            {#MICROBLOG:#}
        {#</div>#}
        <nav class="navbar navbar-expand block">
            {#<a class="navbar-brand" href="#">MICROBLOG:</a>#}
            {#<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">#}
                {#<span class="navbar-toggler-icon"></span>#}
            {#</button>#}
            MICROBLOG:
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active hover-border-bottom">
                        <a class="nav-link " href="">All posts<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item hover-border-bottom">
                        <a class="nav-link text-danger" style="font-weight: 900" href="/mb/hot">HOT</a>
                    </li>
                    <li class="nav-item hover-border-bottom">
                        <a class="nav-link" href="/mb/fav">Favorites</a>
                    </li>
                </ul>
            </div>
        </nav>

    {#{{ dump(posts) }}#}
    {% for post in posts %}
    <div class="block mb-2" id="post_block_{{ post.id }}">
        <div class="row">
            <div class=" col-2 col-sm-2 col-lg-1 post-left-col" style="width: 60px; height: 60px;">
                <div style="text-align: center;">
                    {% if post.avatar==null %}
                    <a href="/profile/{{ post.username }}"><img class="post-img" alt="" src="{{ asset('img/avatars/default.png') }}"></a>
                    {% else %}
                    <a href="/profile/{{ post.username }}"><img class="post-img" alt="" src="{{ asset('uploads/avatars/' ~ post.avatar) }}"></a>
                    {% endif %}
                </div>
            </div>
            <div class="col-11 col-sm-10 col-lg-11 p-0 pr-3">
                <div class="d-inline">
                    <a class="author" href="/profile/{{ post.username }}">
                        {{ post.username }}
                        <div class="
                                {% if post.roles|join == "ROLE_ADMIN" %}badge badge-danger
                                {% elseif post.roles|join == "ROLE_ADMIN" %}badge badge-warning
                                {% else %}
                                badge
                                {% endif %}">
                                {% if post.roles|join == "ROLE_ADMIN" %}
                                Admin
                                {% elseif post.roles|join == "ROLE_MOD" %}
                                Moderator
                                {% endif %}
                                </div>
                            </a>

                            <a class="post-date-link" href="/mb/post/{{ post.id }}">{{ post.date }}</a>
                            </div>

                            <div class="float-right row mr-1">
                                <div class="col p-0 mr-2 plus-counter">{% if post.points == null %}0{% else %}{{ post.points }}{% endif %}</div>
                                {% if is_granted('ROLE_USER') %}
                                <div class="col p-0">
                                    <form class="p-0 m-0" method="post">
                                        <button
                                                {% if post.addedPoint == 1 %}
                                                name="subtractPointToPost"
                                                {% else %}
                                                name="addPointToPost"
                                                {% endif %}
                                                value="{{ post.id }}" class="
                                                {% if post.addedPoint == 1 %}
                                                 btn-plus btn-plus-active
                                                {% else %}
                                                btn-plus
                                                {% endif %}
                                                d-inline">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </form>
                                </div>
                                {% endif %}
                            </div>

                            <div class="border-bottom pt-1"></div>
                            <p class="markdown">{{ post.content }}</p>
                            {% if is_granted('ROLE_USER') %}
                            <a class="link hover-underline" onclick="reply(this,'{{ post.id }}')"><i class="fas fa-reply"></i> reply</a>
                            {% endif %}
                {% if is_granted('ROLE_MOD') %}
                    <div class="dropdown d-inline cursor-pointer hover-underline">
                        <a class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-exclamation-triangle"></i> Mod Menu
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item bg-danger"><i class="fas fa-times"></i> permanent removal (just this post)</a>
                            <a class="dropdown-item bg-danger"><i class="fas fa-times"></i> permanent removal (with comments)</a>
                            <a class="dropdown-item bg-danger"><i class="fas fa-times"></i> permanent removal (without comments)</a>
                            <a class="dropdown-item bg-warning"><i class="fas fa-trash"></i> disable visibility (just this post)</a>
                            <a class="dropdown-item bg-warning"><i class="fas fa-trash"></i> disable visibility (with comments)</a>
                            <a class="dropdown-item bg-warning"><i class="fas fa-trash"></i> disable visibility (without comments)</a>
                            <a class="dropdown-item bg-warning"><i class="fas fa-undo-alt"></i> enable visibility (with comments)</a>
                            <a class="dropdown-item bg-warning"><i class="fas fa-undo-alt"></i> enable visibility (without comments)</a>
                            <a class="dropdown-item bg-warning"><i class="fas fa-undo-alt"></i> enable visibility (just this post)</a>
                        </div>
                    </div>
                {% endif %}
                                {% for comment in post.comments %}
                             <a class="comment-anchor" id="comment-{{ comment.id }}"></a>
                            <div id="comment_row_{{ comment.id }}" class=" row {% if comment.visible != null %}deleted{% endif %}">
                                <div class="col-1">
                                    <a href="/profile/{{comment.username}}">
                                    {% if comment.avatar==null %}
                                         <img class="subpost-img" src="{{ asset('img/avatars/default.png') }}">
                                    {% else %}
                                        <img class="subpost-img" src="{{ asset('uploads/avatars/' ~ comment.avatar) }}">
                                    {% endif %}
                                        </a>
                                </div>
                                <div class="col-11">
                                    <a class="author" href="/profile/{{ comment.username }}">{{ comment.username }}</a>
                                    <a class="post-date-link" href="/mb/post/{{ post.id }}#comment-{{ comment.id }}">{{ comment.date }}</a>
                                    <div class="border-bottom"></div>
                                    {% if comment.visible != null %}
                                    <p>Comment removed by the moderator</p>
                                    {% else %}
                                    <p class="markdown">{{ comment.content }}</p>
                                    {% endif %}
                                    <a href="#comment" class="link" onclick="reply(this,'{{ post.id }}')"><i class="fas fa-reply"></i> reply</a>

                                    {#MOD#}
                                    {#{% if is_granted('ROLE_MOD') %}
                                    <div class="dropdown d-inline">
                                        <button type="button" class="btn btn-sm btn-warning dropdown-toggle" data-toggle="dropdown">
                                            <i class="fas fa-exclamation-triangle"></i>
                                        </button>
                                        <div class="dropdown-menu">

                                                <button onclick="mod_delete(this,'{{ comment.id }}')" class="dropdown-item" href="/mb/post/{{ comment.id }}"> <i class="fas fa-trash"></i> <b id="removeormakevisible_{{ comment.id }}">{% if comment.visible == null %}Remove{% else %}Make visible{% endif %}</b>(change visibility)</button>

                                            <a class="dropdown-item" href="#">Link 2</a>
                                            <a class="dropdown-item" href="#">Link 3</a>
                                        </div>
                                    </div>
                                    {% endif %}#}
                                    {#END MOD#}

                                </div>
                            </div>
                                {% endfor %}

                        </div>
                    </div>

        </div>
        <div id="c{{ post.id }}">
    </div>
    {% endfor %}
    </div>
    <div class="col-12 col-sm-3 mt-0">
        <div class="block">
            <div class="block-title">Top 24h</div>
            {% for hot in hotPosts %}
            <div>
                <img style="width: 20px; height: 20px;" src="{{ asset('uploads/avatars/' ~ hot.user.avatar) }}">
                <a href="{{ url('mb_post_id',{'slug': hot.id}) }}">{{ hot.date|date('Y-m-d H:i:s') }}</a>
                {{ hot.content }}
            </div>
            {% endfor %}
        </div>
    </div>

    {% if addPostForm is defined%}
    {#<div >#}
    <div class="col-12 col-md-9" id="editor_wrapper">
        <div class="block-footer p-2 mt-3">
        {#<div class="p-1">#}
            {{ form_start(addPostForm) }}
            {#{{ form_row(addPostForm.content, {'attr':{'class':'form-control post-textarea','id':'post'},'label':'NEW POST:'})  }}#}
            {{ form_row(addPostForm.content, {'label':'NEW POST:'})  }}
            {#{{ form_row(addPostForm.content) }}#}
            <button type="submit" class="btn btn-primary">Submit</button>
            {{ form_end(addPostForm) }}
        </div>
    </div>
    {% endif %}
    </div>

    {#<div class="block-footer" id="comment">#}
    <div class="d-none">
    <div class="block-footer p-2" id="comment">
        {{ form_start(addCommentsForm) }}
        {#{{ form_row(addCommentsForm.content, {'attr':{'class':'form-control post-textarea mb-1','id':'post'}, 'label':'Comment'})  }}#}
        {{ form_widget(addCommentsForm.content, {'label':false}) }}
        {#{{ form_row(addCommentsForm._token)  }}#}
        {{ form_row(addCommentsForm.postid, {'attr':{'id':'postid'}})  }}
        {#{{ dump(addCommentsForm) }}#}
        <button type="submit" class="btn btn-primary float-right">Submit</button>
        {#<input type="hidden" name="postId">#}
        {{ form_end(addCommentsForm) }}
    </div>
    </div>
