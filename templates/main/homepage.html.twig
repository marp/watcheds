{% block bodyextra %}
    <header class="masthead text-white text-center">
      <div class="overlay" style=""></div>
      <div class="container">
        <div class="row">
          <div class="col-xl-9 mx-auto">
            <h1 class="mb-5">Search TV series, mark watched episodes!</h1>
          </div>
          <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
            <form action="/search" method="get">
              <div class="form-row">
                <div class="col-12 col-md-9 mb-2 mb-md-0">
                  <input type="text" class="form-control form-control-lg" name="s" placeholder="Enter TV series name...">
                </div>
                <div class="col-12 col-md-3">
                  <button type="submit" class="btn btn-block btn-lg btn-primary">Search!</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </header>

    <!-- Icons Grid -->
    <section class="features-icons bg-light text-center">
      <div class="container">
        <div class="row">
          <div class="col-lg-4">
            <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
              <div class="features-icons-icon d-flex">
                <i class="fas fa-desktop m-auto text-primary"></i>
              </div>
              <h3>Fully Responsive</h3>
              <p class="lead mb-0">This site will look great on any device, no matter the size!</p>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
              <div class="features-icons-icon d-flex">
                <i class="fas fa-database m-auto text-primary"></i>
              </div>
              <h3>Huge Database</h3>
              <p class="lead mb-0">We have imdb.com database which is frequently updating!</p>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="features-icons-item mx-auto mb-0 mb-lg-3">
              <div class="features-icons-icon d-flex">
                <i class="fas fa-check-circle m-auto text-primary"></i>
              </div>
              <h3>Easy to Use</h3>
              <p class="lead mb-0">Easy as one-two-three. Login, search, mark!</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Image Showcases -->

    <section class="showcase m-3 m-md-4 m-lg-4 p-sm-3 p-md-4 p-lg-4">
      <div class="container-fluid p-0">
        <div class="row no-gutters">

          <div class="col-lg-6 order-lg-2 text-white showcase-img text-center" {#style="background-image: url('/img/homepage/1.gif');"#}>
              <img style="height: auto;width: 100%;" class="showcase-img-mark" src="{{ asset('img/homepage/1.gif') }}"></div>
          <div class="col-lg-6 order-lg-1 my-auto {#showcase-text#} pr-sm-3"  style="text-align: right">
            <h2>Login or Sign up</h2>
            <p class="lead mb-0">You can browse series, episodes library without login but if you want mark watched episodes you have to login first. If you don't have an account, you have to sign up.</p>
          </div>
        </div>
        <br>
        <div class="row no-gutters">
          <div class="col-lg-6 text-white showcase-img" {#style="background-image: url('/img/homepage/2.gif');"#}><img class="showcase-img-mark" style="height: auto;width: 100%;" src="{{ asset('img/homepage/2.gif') }}"></div>
          <div class="col-lg-6 my-auto pl-sm-3  {#showcase-text#}">
            <h2 class="">Search</h2>
            <p class="lead mb-0">We provide top quality series and episodes library. You can find here everything what is on imdb.com, if something is not showing make sure you entered correct name.</p>
          </div>
        </div>
        <br>
        <div class="row no-gutters">
          <div class="col-lg-6 order-lg-2 text-white showcase-img text-center" {#style="background-image: url('/img/homepage/3.gif');"#}><img class="showcase-img-mark" style="height: auto;width: 100%;" src="{{ asset('img/homepage/3.gif') }}"></div>
          <div class="col-lg-6 order-lg-1 my-auto {#showcase-text#} pr-sm-3"  style="text-align: right">
            <h2>Just click</h2>
            <p class="lead mb-0">To mark or unmark watched episodes of TV series just click on button. Now you can have your watched episodes list everywhere.</p>
          </div>
        </div>
      </div>
    </section>

